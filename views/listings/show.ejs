<% layout("/layouts/boilerplate") %>

<div class="row">
  <div class="col-8 offset-3">
    <h3><%= listing.title %></h3>
  </div>
  <div class="card col-6 offset-3 show-card listing-card">
    <img src="<%=listing.image.url%>" class="card-img-top show-img" alt="..." />
    <p class="text-muted">
      <i>Owned by </i
      ><span style="color: rgb(160, 46, 46)"
        ><%= listing.owner.username %></span
      >
    </p>
    <div class="card-body">
      <p class="card-text"><%= listing.description %></p>
      <p>&#8377; <%= listing.price.toLocaleString("en-IN") %></p>
      <p><%= listing.location %></p>
      <p><%= listing.country %></p>
    </div>
  </div>
  <br />
</div>
<% if (currUser && currUser._id.equals(listing.owner._id)) { %>
<div class="btns row">
  <a
    href="/listings/<%= listing._id %>/edit"
    class="btn btn-dark col-1 offset-3 mb-2"
    >Edit</a
  >
  <form
    method="post"
    action="/listings/<%= listing._id %>?_method=DELETE"
    class="col-1 mb-2"
  >
    <button class="btn btn-dark delete-btn">Delete</button>
  </form>
  <% } %>
  <div class="col-8 offset-3 mb-3">
    <hr />
    <h4>Leave a Review:</h4>
    %>

    <form
      action="/listings/<%= listing._id %>/reviews"
      method="POST"
      novalidate
      class="needs-validation"
    >
      <div class="mt-3 mb-3">
        <label for="rating" class="form-label">Rating:</label>
        <input
          type="range"
          min="1"
          max="5"
          id="rating"
          name="review[rating]"
          class="form-range"
        />
      </div>
      <div class="mt-3 mb-3">
        <label for="comment" class="form-label">Comment</label>
        <textarea
          id="comment"
          name="review[comment]"
          rows="5"
          cols="30"
          class="form-control"
          required
        ></textarea>
        <div class="invalid-feedback">Please add some comments for review</div>
      </div>

      <button type="submit" class="btn btn-outline-dark">Submit</button>
    </form>
    <hr />
    <h4 style="color: rgb(203, 203, 7)"><b>Reviews</b></h4>
    <div class="row">
      <% for(review of listing.reviews){ %>

      <div class="card col-5 mb-3 ms-3">
        <div class="card-body mt-2">
          <h5 class="card-title"><%= review.author.username %></h5>
          <p div="card-text text-muted"><%=review.comment%></p>
          <p div="card-text"><%=review.rating%> stars</p>

          <form
            class="mb-3"
            method="post"
            action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
          >
            <button class="btn btn-dark btn-sm review-btn">Delete</button>
          </form>
        </div>
      </div>

      <% } %>
    </div>
  </div>
</div>
