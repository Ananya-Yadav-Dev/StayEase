<% layout("/layouts/boilerplate") %>

<div class="login">
  <div class="loginCard">
    <div class="cardHeader">Login Form</div>
    <form
      method="post"
      action="/login"
      class="needs-validation"
      novalidate
      autocomplete="off"
    >
      <div class="form-group">
        <span class="input-icon"><i class="fa fa-user"></i></span>

        <input
          name="username"
          id="username"
          type="text"
          class="form-control"
          placeholder="Enter Username"
          required
        />
      </div>

      <div class="form-group">
        <span class="input-icon"><i class="fa fa-lock"></i></span>

        <input
          name="password"
          id="password"
          type="password"
          class="form-control"
          placeholder="Password"
          required
        />
      </div>
      <button class="btn-login" type="submit">Login</button>
      <div class="signup-row">Not a member? <a href="/signup">Signup now</a></div>
    </form>
  </div>
</div>
